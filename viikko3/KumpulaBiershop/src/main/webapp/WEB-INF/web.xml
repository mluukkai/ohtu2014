    <servlet-mapping>
        <servlet-name>Tuotelista</servlet-name>
        <url-pattern>/Tuotelista</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LisaaOstoskoriin</servlet-name>
        <url-pattern>/LisaaOstoskoriin</url-pattern>
