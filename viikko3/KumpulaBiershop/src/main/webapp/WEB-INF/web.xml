    </servlet>
    <servlet>
        <servlet-name>TyhjennaOstoskori</servlet-name>
        <servlet-class>com.mycompany.webkauppa.TyhjennaOstoskoriServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MaksaOstokset</servlet-name>
        <servlet-class>com.mycompany.webkauppa.MaksaOstoksetServlet</servlet-class>
