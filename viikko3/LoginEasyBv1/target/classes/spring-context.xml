    <bean id="fileUserDAO" class="ohtu.data_access.FileUserDAO">
        <constructor-arg type="java.lang.String" value="salasana.txt" />
    </bean>
    <bean id="auth" class="ohtu.services.AuthenticationService">
        <constructor-arg ref="fileUserDAO"/>
    </bean>
